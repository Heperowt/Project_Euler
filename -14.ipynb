    "maxlist = list()\n",
    "for num in range(1,1000000):\n",
    "    counter = 0\n",
    "    while num > 1 :\n",
    "        if num % 2 == 0:\n",
    "            num //= 2\n",
    "        elif num % 2 == 1:\n",
    "            num = 3*num + 1\n",
    "        counter += 1\n",
    "    maxlist.append(counter)\n",
    "print(maxlist.index(max(maxlist))+1)"
   ]
  }
